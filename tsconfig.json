{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "src",
    "jsx": "react",
    "allowJs": true,
  },
  "include": [
    "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.js"
     ],
  "exlcude": [ "node_modules" ]
}
